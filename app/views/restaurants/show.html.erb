<h1><%= @restaurant.name %> <small><%= @restaurant.address %></small></h1>
<h2>
  <%= pluralize @restaurant.reviews.size, "review" %>
</h2>

<div id="reviews">
  <% if @restaurant.reviews.blank? %>
    Be the first to leave a review for <%= @restaurant.name %>
  <% else %>
    <% @restaurant.reviews.each do |review| %>
      <p id="review-<%= review.id %>"><%= review.content %> <%= link_to 'Delete review', review_path(review), remote: true, method: :delete, data: { confirm: 'Are you sure?' } %> </p>
    <% end %>
  <% end %>
</div>

<%= simple_form_for [@restaurant, @review], remote: true do |f| %>
  <%= f.input :content %>
  <%= f.submit "Create Review" %>
<% end %>
